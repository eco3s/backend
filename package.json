{
	"name": "eco3s-backend",
	"version": "0.1.0",
	"description": "the API server for eco3s",
	"keywords": [
		"API",
		"backend",
		"nestjs"
	],
	"author": "Abiria <abiria.dev@gmail.com>",
	"homepage": "https://github.com/eco3s/backend#readme",
	"repository": "github:eco3s/backend",
	"private": true,
	"license": "GPL-3.0-or-later",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "swc --ignore \"**/*.spec.ts,src/hmr.ts\" --delete-dir-on-start --out-dir dist/ src/",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "pnpm run build && pnpm run start:prod",
		"start:dev": "HMR=true node -r @swc/register src/hmr.ts",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch --config",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r @swc/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.ts"
	},
	"dependencies": {
		"@nestjs/common": "^9.0.0",
		"@nestjs/core": "^9.0.0",
		"@nestjs/platform-express": "^9.0.0",
		"@prisma/client": "^4.4.0",
		"lodash": "^4.17.21",
		"nanoid": "^3.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0",
		"superagent": "8.0.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^9.0.0",
		"@nestjs/schematics": "^9.0.0",
		"@nestjs/testing": "^9.0.0",
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.3.7",
		"@swc/jest": "^0.2.23",
		"@swc/register": "^0.1.10",
		"@types/express": "^4.17.13",
		"@types/jest": "28.1.8",
		"@types/lodash": "^4.14.186",
		"@types/node": "^16.0.0",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"chokidar": "^3.5.3",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "28.1.3",
		"jest-mock-extended": "2.0.4",
		"prettier": "^2.3.2",
		"prisma": "^4.4.0",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "28.0.8",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.1.0",
		"typescript": "^4.7.4"
	}
}
